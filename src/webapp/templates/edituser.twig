{% extends 'base.twig' %}

{% block content %}

    <h2>Edit profile</h2>

    <form action="" method="POST">
        <div id="flasherror">{{ flash.error|escape }}</div>

        <label>Full name:</label>
        <input type = "text" name="fullname" value= "{{ user.fullname|escape }}"> <br />

        <label>Address:</label>
        <input type = "text" name="address" value= "{{ user.address|escape }}"> <br />

        <label>Postcode:</label>
        <input type = "text" name="postcode"  value= "{{ user.postcode|escape }}"> <br />

        <label>Email:</label>
        <input type="text" name="email" value="{{ user.email|escape}}"> <br />

        <label>Bio:</label>
        <textarea name="bio">{{ user.bio|escape }}</textarea>

        <label>Age:</label>
        <input type="text" name="age" value="{{ user.age|escape }}"> <br />
        <input type="text" name="csrf" hidden value="{{ csrf }}">

        <input type="submit" name="submit" value="Save profile">
    </form>
{% endblock %}
