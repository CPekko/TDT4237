{% extends 'base.twig' %}

{% block content %}

<h2>Admin section</h2>

{% if users %}
    <table>
    <tr>
        <th>Id</th>
        <th>Username</th>
    </tr>
    {% for user in users %}
        <tr>
            <td>{{ user.userid|raw }}</td>
            <td><a href="/user/{{ user.userid|raw }}">{{ user.username|raw }}</a></td>
            <td><a href="/admin/delete/{{ user.userid|raw }}">Delete this user</a></td>
        </tr>
    {% endfor %}
    </table>
{% else %}
    The users table is empty.
{% endif %}

{% if posts %}
    <table>
        <tr>
            <th> ID</th>
            <th> Title</th>
            <th></th>
        </tr>
        {% for post in posts %}
        <tr>
            <td>{{ post.postId|raw }}</td>
            <td><a href="/posts/{{ post.postId|raw }}">{{ post.title }}</a></td>
            <td><a href="/admin/delete/post/{{ post.postid|raw }}">Delete this post</a></td>
        </tr>
        {% endfor %}
    </table>
{% else %}
    There are no posts
{% endif %}

{% endblock %}
