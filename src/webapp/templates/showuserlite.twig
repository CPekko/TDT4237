{% extends 'base.twig' %}

{% block content %}

<h2>User</h2>

{{ flash.info }} <br />
{{ flash.error }} <br />

{% if user %}
    <table>
        <tr>
            <th>Id</th>
            <th>{{ user.userid|escape }}</th>
            <tr></tr>
            <th>Username:</th>
            <td>{{ user.username|escape }}</th>
            <tr></tr>
            <th>Bio:</th>
            <td>{{ user.bio|escape }}</td>
            <tr></tr>
            <th>Age:</th>
            <td>{{ user.age|escape }}</td>
            <tr></tr>




    </table>
{% else %}
    Could not find a user with username "{{ username|escape }}".
{% endif %}

{% endblock %}
