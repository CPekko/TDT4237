{% extends 'base.twig' %}

{% block content %}

<h2>User</h2>

{{ flash.info|escape}} <br />
{% if flash.errors %}
<ul>
    {% for error in flash.errors %}
        <li> {{ error|escape }} </li>
    {% endfor %}
</ul>
{% endif %}

{% if user %}
    <table>
        <tr>
            <th>Id</th>
            <th>{{ user.userid|escape }}</th>
            <tr></tr>
            <th>Username:</th>
            <td>{{ user.username|escape }}</th>
            <tr></tr>
            <th>Full Name:</th>
            <td>{{ user.fullname|escape }}</th>
            <tr></tr>
            <th>Address:</th>
            <td>{{ user.address|escape }} </td>
            <tr></tr>
            <th>Postcode:</th>
            <td>{{  user.postcode|escape }}</td>
            <tr></tr>
            <th>Email:</th>
            <td>{{ user.email|escape }}</td>
            <tr></tr>
            <th>Bio:</th>
            <td>{{ user.bio|escape }}</td>
            <tr></tr>
            <th>Age:</th>
            <td>{{ user.age|escape }}</td>
            <tr></tr>
    </table>
{% else %}
    Could not find a user with username "{{ username|escape }}".
{% endif %}

{% endblock %}
